\ProvidesPackage{preamblebook}

% Use the Latin Modern fonts.
\usepackage{lmodern}

% Add additional font sizes to the document classes
%
% Examples:
%    \documentclass[14pt, a4paper]{extarticle}
\usepackage{extsizes}

% Set line spacing.
%
% Use 1.15 for body text and 1.0 for footnote and figure text. The setspace
% package uses single spacing by default for footnote and figure text.
\usepackage{setspace}
\setstretch{1.15}

% Enforce margin for captions.
\usepackage[margin=1cm]{caption}

\geometry{margin=2cm}

% Use fancy headers, e.g.
%
%    2.2 Decompilation Phases                           2 LITERATURE REVIEW
%    ______________________________________________________________________
%
% The fancyhdr package must be included after the geomtry package, to use the
% correct margin.
\usepackage{fancyhdr}
\fancyhf{}
\fancyhead[L]{\fontsize{14}{16}\selectfont \slshape \rightmark}
\fancyhead[R]{\fontsize{14}{16}\selectfont \slshape \leftmark}
\fancyfoot[C]{\fontsize{14}{16}\selectfont \thepage}
\pagestyle{fancy}

% Force the first float on float-only pages to be top-aligned.
%
% ref: http://tex.stackexchange.com/a/28565
\makeatletter
\setlength{\@fptop}{0pt}
\setlength{\@fpbot}{0pt plus 1fil}
\makeatother
