% Draft notice.
\usepackage{eso-pic}
\newcommand\DraftBackground{
	\parbox[b][\paperheight]{\paperwidth}{
		\vfill
		\vspace{1cm}
		\centering
		\textcolor{light_gray_1}{{\fontsize{2cm}{2.5cm}\selectfont Draft}}
		\vfill
	}
}

