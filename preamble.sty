\ProvidesPackage{preamble}

\usepackage[utf8]{inputenc}
\usepackage[english]{babel}
\usepackage[margin=1in]{geometry}
\usepackage[parfill]{parskip}

% Use IEEE-style references.
\usepackage[style=ieee]{biblatex}
\bibliography{references}

% Use fancy headers, e.g.
%
%    2.2 Decompilation Phases                           2 LITERATURE REVIEW
%    ______________________________________________________________________
\usepackage{fancyhdr}
\pagestyle{fancy}

% Prevent "CONTENTS" from showing up twice in the fancy header.
% ref: https://tex.stackexchange.com/a/48432
\makeatletter
\renewcommand\tableofcontents{
	\section*{
		\contentsname
		\@mkboth{\MakeUppercase\contentsname}{}
	}
	\@starttoc{toc}
}
\makeatother

% Prevent "REFERENCES" from showing up twice in the fancy header.
\makeatletter
\defbibheading{bibintoc}{
	\cleardoublepage
	\section*{
		\addcontentsline{toc}{section}{\refname}
		\refname
		\@mkboth{\MakeUppercase\refname}{}
	}
}
\makeatother

% Add support for links.
%
% Options:
%    hidelinks: don't show red boxes around links.
%
% Examples:
%    \url{http://example.org/}
\usepackage[hidelinks]{hyperref}

% Import images.
%
% Examples:
%    \includegraphics[width=\textwidth]{foo.png}
\usepackage[dvipdfmx]{graphicx}
\usepackage{bmpsize}

% Import PDFs.
%
% Examples:
%    \includepdf[pages=-]{foo.pdf}
\usepackage{pdfpages}

% Source code listings, language definitions and styles (NASM and REIL).
%
% Examples:
%    \lstinputlisting[language=nasm, style=nasm]{foo.asm}
\usepackage{listings}
\usepackage{latex/nasm/lang}
\usepackage{latex/nasm/style}
\usepackage{latex/reil/lang}

% Add multi-column and multi-row support for tables.
%
% Examples:
%    \multicolumn{4}{|l|}{foo}
\usepackage{multirow}
