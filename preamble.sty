\ProvidesPackage{preamble}

\usepackage[utf8]{inputenc}
\usepackage[english]{babel}
\usepackage[margin=1in]{geometry}
\usepackage[parfill]{parskip}

% Add support for links.
%
% Options:
%    hidelinks: don't show red boxes around links.
%
% Examples:
%    \url{http://example.org/}
\usepackage[hidelinks]{hyperref}

% Include bibliography in the table of contents.
%
% Options:
%    nottoc: don't include the table of contents in the table of contents.
\usepackage[nottoc]{tocbibind}

% Import images.
%
% Examples:
%    \includegraphics[width=\textwidth]{foo.png}
\usepackage{graphicx}

% Import PDFs.
%
% Examples:
%    \includepdf[pages=-]{foo.pdf}
\usepackage{pdfpages}

% Source code listings, language definitions and styles (NASM and REIL).
%
% Examples:
%    \lstinputlisting[language=nasm, style=nasm]{foo.asm}
\usepackage{listings}
\usepackage{latex/nasm/lang}
\usepackage{latex/nasm/style}
\usepackage{latex/reil/lang}

% Add multi-column and multi-row support for tables.
%
% Examples:
%    \multicolumn{4}{|l|}{foo}
\usepackage{multirow}

% Extends \numprint{1023000} to "1 023 000".
\usepackage{numprint}

% Use IEEE-style references.
\bibliographystyle{ieeetr} % TODO: Change to APA 6th ed? snyft

% Custom labels command by Ian Thompson and Henrik BÃ¸gelund Lavstse.
% ref: https://tex.stackexchange.com/questions/18191/defining-custom-labels/160035#160035
% TODO: The hyper ref target seems off-by-one line, fix it.
\makeatletter
\newcommand{\customlabel}[2]{
	\hypertarget{#1}{#2}
	\protected@write \@auxout {}{\string \newlabel {#1}{{#2}{\thepage}{#2}{#1}{}} }
}
\makeatother
